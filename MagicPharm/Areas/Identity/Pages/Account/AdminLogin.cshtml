@page "~/controlpanel"
@model MagicPharm.Areas.Identity.Pages.Account.AdminLoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap-rtl/css/bootstrap-rtl.css"/>
    <link rel="stylesheet" type="text/css" href="~/css/adminLogin.css">
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('../../../images/backgrounds/adminLogin.jpg');">
            <div class="wrap-login100 p-t-30 p-b-50">
                <span class="login100-form-title p-b-41">
                    כניסה לחשבון
                </span>
                <form method="post" class="login100-form validate-form p-b-33 p-t-5" autocomplete="off">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="wrap-input100 validate-input">
                        <input asp-for="Input.Email" class="input100" placeholder="שם משתמש" autocomplete="off" style="padding:15px">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100 validate-input">
                        <input asp-for="Input.Password" class="input100" placeholder="סיסמה" autocomplete="off" style="padding:15px">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                    </div>

                    <div class="container-login100-form-btn m-t-32">
                        <button type="submit" class="login100-form-btn">
                            כניסה
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>


</body>
</html>
