@model MagicPharm.Models.Entites.Carousel


@{
    ViewData["Title"] = "מחיקה";
}


<h3 style="margin-top:20px">האם אתה בטוח שברצונך למחוק את הפריט ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Priority)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/carousels/@Model.ImageUrl" class="img-thumbnail" style="width:420px;height:200px" />
        </dd>
    </dl>

    <form asp-action="ConfirmDelete" asp-route-id="@Model.Id">
        <input type="submit" value="מחיקה" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-outline-secondary" style="margin-right:auto">חזרה לרשימה</a>
    </form>
</div>