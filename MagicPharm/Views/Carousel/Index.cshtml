@model IEnumerable<Carousel>

@{
    ViewData["Title"] = "Carousel";
}


<h1  style="margin-top:10px">ניהול קרוסלות</h1>

<p  style="margin-top:10px">
    <a asp-action="Create" class="btn btn-secondary"><i class="fas fa-plus"></i> הוספה </a>
</p>
<table class="table table-bordered table-striped table-hover">
    <thead class="text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td class="text-center" style="font-weight:bold;font-size:xx-large">
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td class="text-center">
                    @if (item.ImageUrl != null && item.ImageUrl != string.Empty)
                    {
                        <img class="img-thumbnail" src="~/images/carousels/@item.ImageUrl" style="width:150px;height:64px" />
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" title="עדכן" style="margin-left:14px"><i class="fas fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" title="עיין" style="margin-left:14px"><i class="fas fa-eye"></i></a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" title="מחק" style="margin-left:14px;color:red"><i class="fas fa-trash"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>
