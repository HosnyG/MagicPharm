@model MagicPharm.Models.Entites.Product

@{
    ViewData["Title"] = "פרטים";
}

<h1>@Model.Name</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LongDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LongDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/images/products/@Model.ImageUrl" style="width:256px;height:256px"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsPreferred)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsPreferred)
        </dd>
    </dl>
</div>
<div>

    <a asp-action="List" asp-route-categoryId="@Model.CategoryId" class="btn btn-outline-dark">Back to List</a>
</div>
