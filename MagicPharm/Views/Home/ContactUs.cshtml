@model Message
<div class="container-contact100">
    <div class="wrap-contact100" style="border: 1px solid gray;">
        <div class="contact100-form-title foo">
            <span class="contact100-form-title-1">
                צור קשר
            </span>

            <span class="contact100-form-title-2">
                נשמח לעמוד לשירותכם
            </span>
        </div>

        <form class="contact100-form validate-form" asp-controller="Messages" asp-action="Create">
            <div class="wrap-input100 validate-input" data-validate="Name is required">
                <input asp-for="FullName" class="input100" placeholder="שם מלא">

                <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                <input asp-for="Email" class="input100"  placeholder="מייל">
                <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input" data-validate="Phone is required">
                <input asp-for="Phone" class="input100" placeholder="מספר טלפון">
                <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input" data-validate="Message is required">
                <textarea asp-for="Text" class="input100"  placeholder="הודעה שלך ..."></textarea>
                <span class="focus-input100"></span>
            </div>

            <div class="container-contact100-form-btn">
                <button type="submit" class="contact100-form-btn" id="submitButtonContact">
                    <span>
                        שלח      
                        <i class="fa fa-long-arrow-left m-l-7" aria-hidden="true"></i>
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>