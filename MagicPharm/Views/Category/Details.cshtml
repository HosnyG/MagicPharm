@model Category

@{
    ViewData["Title"] = "פרטים";
}

<h1 style="margin-top:10px">פרטים</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        @if (Model.ImageUrl != null && Model.ImageUrl != string.Empty)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>
            <dd class="col-sm-10">
                <img class="img-thumbnail" src="~/images/categories/@Model.ImageUrl" style="width:400px;height:200px" />
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-outline-info">חזרה לרשימה</a>
</div>